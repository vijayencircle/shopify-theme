    {
      "type": "header",
      "content": "Typography Sizes"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 24,
      "max": 72,
      "step": 1,
      "unit": "px",
      "label": "Title Font Size",
      "default": 40
    },
    {
      "type": "range",
      "id": "desc_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description Font Size",
      "default": 16
    },
    {
      "type": "range",
      "id": "feature_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Feature Text Size",
      "default": 14
    },
    {
      "type": "header",
