<section
  class="mobile-app-promo"
  id="mobile-app-promo-{{ section.id }}"
  style="
    --bg-color: {{ section.settings.bg_color }};
    --accent: {{ section.settings.accent_color }};
    --accent-hover: {{ section.settings.accent_hover_color }};
    --text: {{ section.settings.text_color }};
    --kicker-size: {{ section.settings.kicker_size }}px;
    --heading-size: {{ section.settings.heading_size }}px;
    --text-size: {{ section.settings.text_size }}px;
    --button-size: {{ section.settings.button_size }}px;
  "
>
  <div class="map-inner">

    {% if section.settings.kicker != blank %}
      <div class="map-kicker">
        {{ section.settings.kicker }}
      </div>
    {% endif %}

    <h2 class="map-heading">
      {{ section.settings.heading }}
    </h2>

    {% if section.settings.description != blank %}
      <p class="map-text">
        {{ section.settings.description }}
      </p>
    {% endif %}

    <div class="map-buttons">
      {% if section.settings.app_store_link != blank %}
        <a href="{{ section.settings.app_store_link }}" class="map-btn primary">
          App Store ‚Üí
        </a>
      {% endif %}

      {% if section.settings.play_store_link != blank %}
        <a href="{{ section.settings.play_store_link }}" class="map-btn outline">
          Google Play ‚Üí
        </a>
      {% endif %}
    </div>

  </div>
</section>

<style>
/* ===== BASE (HIDDEN BY DEFAULT) ===== */
.mobile-app-promo {
  display: none;
}

/* ===== MOBILE ONLY ===== */
@media (max-width: 768px) {

  .mobile-app-promo {
    display: block;
    padding: 60px 20px;
    text-align: center;
    background-color: var(--bg-color);
    {% if section.settings.bg_image != blank %}
      background-image: url({{ section.settings.bg_image | image_url: width: 1500 }});
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {% endif %}
  }

  .map-inner {
    max-width: 360px;
    margin: 0 auto;
  }

  .map-kicker {
    font-size: var(--kicker-size);
    color: var(--accent);
    font-weight: 600;
    margin-bottom: 12px;
  }

  .map-heading {
    font-size: var(--heading-size);
    font-weight: 900;
    line-height: 1.2;
    margin-bottom: 16px;
    color: var(--text);
  }

  .map-text {
    font-size: var(--text-size);
    line-height: 1.6;
    color: var(--text);
    opacity: 0.7;
    margin-bottom: 28px;
  }

  .map-buttons {
    display: flex;
    flex-direction: column;
    gap: 14px;
    align-items: center;
  }

  .map-btn {
    width: 100%;
    max-width: 220px;
    padding: 14px 20px;
    border-radius: 12px;
    font-size: var(--button-size);
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.25s ease;
  }

  .map-btn.primary {
    background: var(--accent);
    color: #ffffff;
  }

  .map-btn.primary:hover {
    background: var(--accent-hover);
  }

  .map-btn.outline {
    border: 2px solid var(--accent);
    color: var(--accent);
    background: transparent;
  }

  .map-btn.outline:hover {
    background: var(--accent);
    color: #ffffff;
  }
}
</style>

{% schema %}
{
  "name": "Mobile App Promo",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Top small text",
      "default": "üçµ Coffee At Your Fingertips"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "Download Our Mobile App"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Stay connected with Roast wherever you go. With our mobile app, you can browse the menu, place orders, schedule pickups, and enjoy exclusive rewards."
    },

    { "type": "url", "id": "app_store_link", "label": "App Store link" },
    { "type": "url", "id": "play_store_link", "label": "Google Play link" },

    { "type": "image_picker", "id": "bg_image", "label": "Background image" },
    { "type": "color", "id": "bg_color", "label": "Background color", "default": "#ffffff" },

    { "type": "color", "id": "text_color", "label": "Text color", "default": "#000000" },

    { "type": "color", "id": "accent_color", "label": "Button color", "default": "#e31e24" },
    { "type": "color", "id": "accent_hover_color", "label": "Button hover color", "default": "#c9181e" },

    { "type": "range", "id": "kicker_size", "label": "Kicker font size", "min": 10, "max": 20, "step": 1, "default": 14 },
    { "type": "range", "id": "heading_size", "label": "Heading font size", "min": 20, "max": 40, "step": 1, "default": 30 },
    { "type": "range", "id": "text_size", "label": "Description font size", "min": 12, "max": 20, "step": 1, "default": 15 },
    { "type": "range", "id": "button_size", "label": "Button font size", "min": 12, "max": 20, "step": 1, "default": 16 }
  ],
  "presets": [
    {
      "name": "Mobile App Promo (Mobile Only)"
    }
  ]
}
{% endschema %}
