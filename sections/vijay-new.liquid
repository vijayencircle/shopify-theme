{% if section.settings.heading != blank %}
  <h2
    class="section-heading"
    style="
      color: {{ section.settings.heading_color }};
      font-size: {{ section.settings.heading_size }}px;
    "
  >
    {{ section.settings.heading }}
  </h2>
{% endif %}
{% schema %}
{
  "name": "vijay",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "Your Heading Here"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Size",
      "min": 16,
      "max": 60,
      "step": 1,
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "vijay"
    }
  ]
}
{% endschema %}
